
<div class="row">
  <div class="col-xs-12 col-lg-12">

    <div class="navbar-wagon">
        <!-- Logo -->
        <div class="col-md-3 offset-3">
          <% if user_signed_in? %>
              <%= link_to root_path, class: "navbar-logo" do %>
                <%= image_tag "logo_medshare.png" %>
              <% end %>
          <% end %>
        </div>

        <div class="col-xs-12 col-lg-12 offset-6">
          <%= form_tag(meds_path, :method => "get", id: "search-form") do %>
            <%= text_field_tag :search, params[:search], placeholder: "Busque medicamentos", class:"search-form"%>
            <%= submit_tag "Pesquisar", class: "btn-search" %>
             <!-- <button type="submit" class=>Pesquisar</button> -->
          <% end %>
        </div>

      <!-- Right Navigation -->
        <div class="col-md-2 offset-11">
          <div class="navbar-wagon-right hidden-xs hidden-sm">

            <% if user_signed_in? %>

                <!-- Links when logged in -->

              <%= link_to "Doar", new_med_path, {class: "btn btn-search"} %>

                <!-- Avatar with dropdown menu -->
              <div class="navbar-wagon-item">
                  <div class="dropdown">
                    <%= image_tag user_picture, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>

                    <%unless @share_count == 0%>
                      <div class="badge">
                      <%=link_to @share_count, user_path(current_user), class:"color-white"%>
                      </a>
                      </div>
                    <%end%>


                    <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
                      <li>
                        <%= link_to root_path do %>
                          <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
                        <% end %>
                      </li>
                      <li>
                        <%= link_to user_path(current_user) do %>
                          <i class="fa fa-thermometer-quarter" aria-hidden="true"></i>  <%= t(".profile", default: "Medicamentos") %>
                        <% end %>
                      </li>
                      <li>
                        <%= link_to new_med_path do %>
                          <i class="fa fa-share" aria-hidden="true"></i>  <%= t(".profile", default: "Doar") %>
                        <% end %>
                      </li>
                      <li>
                        <%= link_to destroy_user_session_path, method: :delete do %>
                          <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Sair") %>
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </div>
            <% else %>
              <!-- Login link (when logged out) -->
              <%= link_to t(".sign_in", default: "Entrar"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>

              <%= link_to t(".sign_up", default: "Criar conta"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>

              <%= link_to t(".new_med", default: "Doar"),new_med_path, class: "navbar-wagon-item navbar-wagon-link" %>
            <% end %>

          </div>
        </div>
      </div>

      <!-- Dropdown list appearing on mobile only -->
      <div class="navbar-wagon-item hidden-md hidden-lg">
        <div class="dropdown">
          <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><a href="#">Some mobile link</a></li>
            <li><a href="#">Other one</a></li>
            <li><a href="#">Other one</a></li>
          </ul>
        </div>
      </div>

  </div>
</div>



