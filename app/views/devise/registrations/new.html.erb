<h2 class="text-center">Preencha os dados para criar sua conta</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <div class="form-inputs">
      <%= f.input :name, label:"Nome completo:", required: true, autofocus: true %>
      <%= f.input :address, label:"EndereÃ§o:", required: true, autofocus: true %>
      <%= f.input :zipcode, label:"Cep:", required: true, autofocus: true %>
      <%= f.input :email, label:"Email:", required: true, autofocus: true %>
      <%= f.input :password, label:"Senha:", required: true, hint: ("Minimo: #{@minimum_password_length} caracteres" if @minimum_password_length) %>
      <%= f.input :password_confirmation, label:"Repita sua senha:", required: true %>
    </div>
    <div class="form-actions">
    <%= f.button :submit,'Criar conta', class:'btn-search' %>
    <%=link_to 'Cancelar', root_path, {class:"btn btn-search"}%>
    </div>
  </div>
</div>
<% end %>
