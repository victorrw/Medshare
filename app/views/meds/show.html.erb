<div class="container"
  <div class="wrapper-grey padded">
    <div class="container">
      <div class="col-lg-7 col-md-6 col-sm-12">
        <h1><%=@med.name%></h1>
        <h3>Validade: <%=@med.exp_date%></h3>
        <h3>Doador:<%=@med.user.name%></h3>
        <%= image_tag @med.user.facebook_picture_url, class: "card-user avatar avatar-large" %>
        <p><%=@med.description%></p>
      </div>
      <div class="col-lg-7 col-md-6 col-sm-12">
        <%=cl_image_tag @med.photo.url(:bright)%>
        <%=cl_image_tag @med.photo.url(:bright)%>
        <%=cl_image_tag @med.photo.url(:bright)%>
      </div>
      <div class="text-center"><%= submit_tag "Pedir", class: "btn-search"%></div>
    </div>
  </div>
</div>
<!-- added to display geocoder message -->
<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var coord = <%= raw @med_coordinates.to_json %>;
      alert('Med coordinates are ' + coord.lat + ', ' + coord.lng);
    });
  <% end %>
<% end %>
