
<h1><%= "Med name" %></h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1><%= @med.name %></h1>
      <%= cl_image_tag @med.photo.url(:standard) %>
      <div>Informações do doador</div>
      <div>Localização</div>
      <div>med_photo</div>
      <div>exp_date_photo</div>
      <div>date de validade</div>
      <div>Descrição do Medicamento</div>
      <div>Bula</div>
    </div>
  </div>
</div>

<!-- added to display geocoder message -->
<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var coord = <%= raw @med_coordinates.to_json %>;
      alert('Med coordinates are ' + coord.lat + ', ' + coord.lng);
    });
  <% end %>
<% end %>
