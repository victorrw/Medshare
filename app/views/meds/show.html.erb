<div class="container" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQCPY_s3CSbG4oB6JT6jtCSgwQDbAsWYkdjrYr5sbAluJPnVoj4');">
  <h2 class='text-center'><%@med.name%></h2>

  <div class="medicines-offers">
    <div class="card">
      <%= cl_image_tag @med.photo.url(:bright)%>
      <h4><%= @med.name %> validade:<%=@med.exp_date%></h4>

      <div class="content">

        <p class="description"><%=@med.description%></p>

      </div>

      <%= link_to "Pedir", shares_path, { id:"ask", class: "btn-treehouse" }%>

      <%= link_to "Bula", shares_path, { id:"leaflet", class: "btn-treehouse" }%>

    </div>

    <div class="card">
    <%=image_tag("#{@med.user.facebook_picture_url}", class:"img-circle")%>
    <h4><%=@med.user.name%></h4>
    </div>

  </div>
</div>
